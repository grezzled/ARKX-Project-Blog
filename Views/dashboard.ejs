    <script>

        document.addEventListener('DOMContentLoaded', function () {
            // Load blogs on page start
            fetchAndDisplayBlogs();

            const postForm = document.getElementById('post-form');
            postForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const title = document.getElementById('blog_title').value;
                const content = document.getElementById('blog_content').value;
                const imageInput = document.getElementById('blog_image');
                const imageFile = imageInput.files[0];

                const now = new Date();
                const options = {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: 'numeric',
                    minute: 'numeric',
                };

                const shortDateAndTime = now.toLocaleString(undefined, options);

                // Create a FormData object and append the title, content, and image
                const formData = new FormData();
                formData.append('title', title);
                formData.append('content', content);
                formData.append('image', imageFile);
                formData.append('createdAt', shortDateAndTime);

                // Send a POST request to create a new blog post with FormData
                fetch('/blog/create', {
                    method: 'POST',
                    body: formData, // Use the FormData object as the request body
                })
                    .then(response => response.json())
                    .then(data => {
                        // Call a function to dynamically add the new blog card
                        addNewBlogCard(data);
                    })
                    .catch(error => {
                        console.error('Error creating post:', error);
                    });
            });

            // Handle logout
            const logoutButton = document.getElementById('logout-button');
            logoutButton.addEventListener('click', function () {
                fetch('/logout', {
                    method: 'POST',
                })
                    .then(response => response.json())
                    .then(data => {
                        window.location.href = '/login';
                    })
                    .catch(error => {
                        console.error('Logout error:', error);
                    });
            });
            // ... rest of your code
        });

        //* Function to add a new blog card to the page dynamically
        function addNewBlogCard(blogData) {
            const blogContainer = document.getElementById("blogContainer");

            const cardHTML = `
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card shadow mb-4" style="border-radius: 10px; overflow: hidden;"  data-blog-id="${blogData.id}">
                <!-- Image -->
                <div class="card-img-top text-center">
                    <img src="uploads/blog/${blogData.blogImage}" alt="Blog Image" class="img-fluid">
                </div>
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">${blogData.blogTitle}</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                            aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Blog Options:</div>
                            <a class="dropdown-item" onclick="editBlog(${blogData.id})">Edit</a>
                            <a class="dropdown-item" onclick="unlistBlog(${blogData.id})">Unlist</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" onclick="deleteBlog(${blogData.id})">Delete Blog</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body" style="max-height: 3 * (1.2em); overflow: hidden;">
                    ${blogData.blogContent}
                </div>
                <!-- Card Footer -->
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <div class="text-center">
                        <small>Author: ${blogData.userEmail}</small> |
                        <small>${blogData.createdAt}</small>
                    </div>
                    <button class="btn btn-primary" style="align-self: flex-end;" onclick="readMore(${blogData.id})">Read More</button>
                </div>
            </div>
        </div>
    `;

            blogContainer.insertAdjacentHTML('beforeend', cardHTML);
        }

        //* Function to fetch and display all user blogs
        function fetchAndDisplayBlogs() {
            const userDataScriptTag = document.getElementById("userData");
            const userId = JSON.parse(userDataScriptTag.innerHTML);

            fetch('/blogs/' + userId.id)
                .then(response => response.json())
                .then(data => {
                    const blogContainer = document.getElementById("blogContainer");

                    data.forEach(blog => {
                        const cardHTML = `
                    <div class="col-lg-6 col-md-12 mb-4">
                        <div class="card shadow mb-4" style="border-radius: 10px; overflow: hidden;"  data-blog-id="${blog.id}">
                            <!-- Image -->
                            <div class="card-img-top text-center">
                                <img src="uploads/blog/${blog.blogImage}" alt="Blog Image" class="img-fluid">
                            </div>
                            <!-- Card Header - Dropdown -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">${blog.blogTitle}</h6>
                                <div class="dropdown no-arrow">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                        aria-labelledby="dropdownMenuLink">
                                        <div class="dropdown-header">Blog Options:</div>
                                        <a class="dropdown-item" onclick="editBlog(${blog.id})">Edit</a>
                                        <a class="dropdown-item" onclick="unlistBlog(${blog.id})">Unlist</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" onclick="deleteBlog(${blog.id})">Delete Blog</a>
                                    </div>
                                </div>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body" style="max-height: 3 * (1.2em); overflow: hidden;">
                                ${blog.blogContent}
                            </div>
                            <!-- Card Footer -->
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <div class="text-center">
                                    <small>Author: ${blog.userEmail}</small> |
                                    <small>${blog.createdAt}</small>
                                </div>
                                <button class="btn btn-primary" style="align-self: flex-end;" onclick="readMore(${blog.id})">Read More</button>
                            </div>
                        </div>
                    </div>
                `;
                        blogContainer.innerHTML += cardHTML;
                    });
                })
                .catch(error => {
                    console.error('Error fetching blogs:', error);
                });
        }

        //* Function to delete a blog post by its ID
        function deleteBlog(blogId) {
            // Send a DELETE request to the server to delete the blog post
            fetch(`/blog/${blogId}`, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Blog post deleted successfully, remove the card from the DOM
                        const cardToRemove = document.querySelector(`[data-blog-id="${blogId}"]`);
                        if (cardToRemove) {
                            cardToRemove.remove();
                        }
                    } else {
                        console.error('Delete Blog error:', data.error);
                    }
                })
                .catch(error => {
                    console.error('Delete Blog error:', error);
                });
        }

        function readMore(blogId) {
            const blogPostUrl = `/blog/${blogId}`
            window.open(blogPostUrl, '_blank');
        }

